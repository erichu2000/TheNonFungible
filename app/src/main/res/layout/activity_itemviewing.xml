<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="@font/nunito_bold">

    <ImageView
        android:id="@+id/itemPhoto"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/itemViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemPhoto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25sp"
        android:text="itemName"
        android:textColor="@color/teal_700"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descriptionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemViewName"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="20sp"
        android:text="Description: "
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/specificDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptionTitle"
        android:layout_marginLeft="30sp"
        android:text="specificDescription"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/priceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_below="@+id/specificDescription"
        android:layout_marginTop="20sp"
        android:text="Item Price: "
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/itemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/priceTitle"
        android:layout_below="@+id/specificDescription"
        android:layout_alignTop="@+id/priceTitle"
        android:text="itemPrice"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/puchaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260sp"
        android:layout_marginTop="550dp"
        android:backgroundTint="@color/teal_700"
        android:text="Purchase" />

    <Button
        android:id="@+id/viewingBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="550dp"
        android:backgroundTint="@color/teal_700"
        android:text="Back to market" />

</RelativeLayout>